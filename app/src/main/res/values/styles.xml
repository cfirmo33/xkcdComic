<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.TranslucentStatus" parent="AppTheme" />

    <style name="AppTheme.TranslucentStatusNavigation" parent="AppTheme" />

    <style name="CollapsingToolbarLayoutExpandedTextStyle" parent="AppTheme">
        <item name="android:textColor">@android:color/transparent</item>
        <item name="android:textSize">0.1sp</item>
    </style>

    <style name="MainButtonStyle">
        <item name="android:background">@drawable/drawable_control_button</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginEnd">2dp</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>
